<Home_Screen>:
    name: "home"
    MDFloatLayout:
        id: fundo_home
        Image:
            source:"assets/logo.jpeg"
            size_hint: None, None
            size: 190, 190
            pos_hint:{"center_x":.5, "center_y":.82}

        MDLabel:
            text: "Bem Vindo"
            font_name: 'Roboto-Bold'
            color: "#026E89"
